@{
    ViewData["Title"] = "檢驗排程單";
}

<!DOCTYPE html>
<html lang="zh-Hant">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <style>
        body {
            background-color: #f0f8f9;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        .header {
            background-color: #73bfb8;
            color: white;
            padding: 20px;
            text-align: center;
        }

        .footer {
            background-color: #f0f8f9;
            color: gray;
            text-align: center;
            padding: 10px 0;
        }

        .content {
            flex: 1;
            display: flex;
            justify-content: center;
            align-items: flex-start;
            padding: 20px;
            overflow-y: auto;
        }

        .content-wrapper {
            width: 100%;
            max-width: 1200px;
            background-color: #ffffff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            display: flex;
        }

        .sidebar {
            width: 150px;
            background-color: #dcebee;
            padding: 20px;
            margin-right: 20px;
            border-radius: 10px;
        }

        .main-content {
            flex-grow: 1;
        }

        .search-box {
            margin-bottom: 20px;
            display: flex;
            justify-content: center;
        }

            .search-box input {
                padding: 5px;
                margin-right: 10px;
            }

        .btn-primary {
            background-color: #73bfb8;
            border-color: #73bfb8;
        }

            .btn-primary:hover {
                background-color: #64a29d;
                border-color: #64a29d;
            }

        th {
            background-color: #dcebee;
        }

        .hidden {
            display: none;
        }

        .logout-btn {
            position: absolute;
            top: 10px;
            right: 20px;
        }
    </style>
</head>
<body>
    <a class="logout-btn" href="/Home/FrontPage">
        <img src="/images/首頁圖示.png" alt="首頁" style="height: 50px;" />
    </a>
    <div class="header">
        <h1>@ViewData["Title"]</h1>
    </div>

    <div class="content">
        <div class="content-wrapper">
            <div class="sidebar">
                <h5 style="text-align: center;">導航選單</h5>
                <ul class="list-unstyled" style="text-align: center;">
                    <li><a href="#" onclick="showContent('inspection-list')" style="font-size: 20px; color: #427677;">檢驗單</a></li>
                    <li><a href="#" onclick="showContent('checkup-list')" style="font-size: 20px; color: #427677;">檢查單</a></li>
                </ul>
            </div>
            <div class="main-content">
                <div id="inspection-list" class="content-section">
                    <div class="search-box">
                        <input type="date" id="searchDateInspection" />
                        <button type="button" class="btn btn-primary" onclick="searchByDate('dataTable', 'searchDateInspection')">搜尋</button>
                    </div>
                    <h2>檢驗項目列表</h2>
                    <table id="dataTable" class="table table-bordered">
                        <thead>
                            <tr>
                                <th>日期</th>
                                <th>科別</th>
                                <th>項目</th>
                                <th>詳細資訊</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>2024-10-18</td>
                                <td>血液腫瘤科</td>
                                <td>抽血檢驗</td>
                                <td><a href="#" data-id="blood-test-1" onclick="showDetail(this)">抽血單</a></td>
                            </tr>
                            <tr>
                                <td>2024-10-25</td>
                                <td>內科</td>
                                <td>尿液檢查</td>
                                <td><a href="#" data-id="urine-test-1" onclick="showDetail(this)">尿液單</a></td>
                            </tr>
                        </tbody>
                    </table>
                </div>

                <div id="checkup-list" class="content-section hidden">
                    <div class="search-box">
                        <input type="date" id="searchDateCheckup" />
                        <button type="button" class="btn btn-primary" onclick="searchByDate('dataTableCheckup', 'searchDateCheckup')">搜尋</button>
                    </div>
                    <h2>檢查項目列表</h2>
                    <table id="dataTableCheckup" class="table table-bordered">
                        <thead>
                            <tr>
                                <th>日期</th>
                                <th>科別</th>
                                <th>項目</th>
                                <th>詳細資訊</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>2024-10-20</td>
                                <td>心臟科</td>
                                <td>心電圖檢查</td>
                                <td><a href="#" data-id="ecg-test-1" onclick="showDetail(this)">心電圖單</a></td>
                            </tr>
                            <tr>
                                <td>2024-10-22</td>
                                <td>內科</td>
                                <td>X光檢查</td>
                                <td><a href="#" data-id="xray-test-1" onclick="showDetail(this)">X光單</a></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="footer">
        <p>@DateTime.Now.ToString("yyyy年MM月dd日 dddd HH:mm:ss")</p>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="detailModal" tabindex="-1" role="dialog" aria-labelledby="detailModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="detailModalLabel">檢驗單據詳細資訊</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body" id="modalBodyContent">
                    <p>請稍候...</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">關閉</button>
                </div>
            </div>
        </div>
    </div>

    <script>
        function searchByDate(tableId, inputId) {
            const input = document.getElementById(inputId).value;
            const filter = input.toUpperCase();
            const table = document.getElementById(tableId);
            const tr = table.getElementsByTagName("tr");

            for (let i = 1; i < tr.length; i++) {
                const td = tr[i].getElementsByTagName("td")[0];
                if (td) {
                    const txtValue = td.textContent || td.innerText;
                    if (txtValue.indexOf(filter) > -1) {
                        tr[i].style.display = "";
                    } else {
                        tr[i].style.display = "none";
                    }
                }
            }
        }

        function showContent(contentId) {
            const contents = document.getElementsByClassName("content-section");
            for (let i = 0; i < contents.length; i++) {
                contents[i].classList.add("hidden");
            }
            document.getElementById(contentId).classList.remove("hidden");
        }

        function showDetail(element) {
            const detailId = element.getAttribute('data-id');

            let detailContent = '';
            switch (detailId) {
                case 'blood-test-1':
                    detailContent = `
                                        <h3>抽血單</h3>
                                        <p>日期：2024-10-18</p>
                                        <p>科別：血液腫瘤科</p>
                                        <p>項目：抽血檢驗</p>
                                        <p>描述：血液腫瘤科的例行檢查...</p>`;
                    break;
                case 'urine-test-1':
                    detailContent = `
                                        <h3>尿液單</h3>
                                        <p>日期：2024-10-25</p>
                                        <p>科別：內科</p>
                                        <p>項目：尿液檢查</p>
                                        <p>描述：內科的尿液檢查單...</p>`;
                    break;
                case 'ecg-test-1':
                    detailContent = `
                                        <h3>心電圖單</h3>
                                        <p>日期：2024-10-20</p>
                                        <p>科別：心臟科</p>
                                        <p>項目：心電圖檢查</p>
                                        <p>描述：心臟科心電圖檢查單...</p>`;
                    break;
                case 'xray-test-1':
                    detailContent = `
                                        <h3>X光單</h3>
                                        <p>日期：2024-10-22</p>
                                        <p>科別：內科</p>
                                        <p>項目：X光檢查</p>
                                        <p>描述：內科的X光檢查單...</p>`;
                    break;
            }

            document.getElementById('modalBodyContent').innerHTML = detailContent;
            $('#detailModal').modal('show');
        }
    </script>
</body>
</html>
